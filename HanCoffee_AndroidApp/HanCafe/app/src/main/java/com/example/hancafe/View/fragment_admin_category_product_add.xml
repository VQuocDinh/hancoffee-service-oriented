<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Controller.Activity.Admin.Product.AddCategoryProductFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add New Category"
        android:background="@color/red"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Name"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_edit_text_product"
        android:gravity="center"
        android:id="@+id/edtName"/>



    <!--    <EditText-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="35dp"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:layout_marginRight="10dp"-->
    <!--        android:background="@drawable/rounded"-->
    <!--        android:gravity="center"-->
    <!--        android:id="@+id/edtCategory"/>-->


    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ca_phe_xay" />

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button_product"
        android:backgroundTint="@color/red"
        android:text="Choose Image"
        android:textColor="@color/white"/>




    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:text="Save"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/red"
        android:layout_gravity="center"
        android:id="@+id/btnSave"
        android:background="@drawable/custom_button_product"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Back"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:id="@+id/btnBack"
        android:background="@drawable/custom_button_product"/>

</LinearLayout>