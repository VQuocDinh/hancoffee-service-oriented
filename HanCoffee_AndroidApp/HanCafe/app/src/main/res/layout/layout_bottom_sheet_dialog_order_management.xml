    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnConfirmOrderManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="@string/title_confirm"
            android:background="@drawable/custom_background_linear_container"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnDeliveryOrderManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/title_delivery"
            android:background="@drawable/custom_background_linear_container"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btnCompleteOrderManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="@string/title_complete"
            android:background="@drawable/custom_background_linear_container"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnCancelOrderManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/title_cancel"
            android:background="@drawable/custom_background_linear_container"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>
    </LinearLayout>

